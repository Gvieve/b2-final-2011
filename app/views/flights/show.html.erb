<h2>Flight num.: <%= @flight.number %></h2>
<h3>Date: <%= @flight.date %></h3>
<h3>Time: <%= @flight.time %></h3>
<h3>Departing from: <%= @flight.departure_city %></h3>
<h3>Arriving at: <%= @flight.arrival_city %></h3>
<section class="passengers">
  <h3>Passengers:</h3>
    <ul>
      <% @flight.adult_passengers.each do |passenger| %>
        <div id="passenger-<%= passenger.id %>">
          <li><%= passenger.name %><%= button_to "Remove Passenger from Flight", flight_passenger_path({flight_id: @flight.id, passenger_id: passenger.id}), method: :delete %></li><br>
        </div>
      <% end  %>
    </ul>
  <h3>Average age of adult passengers: <%= @flight.average_age_adult_passengers.round(2) if !@flight.adult_passengers.empty? %></h3>
</section>
